<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddTask">

    <TextView
        android:id="@+id/task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Add Task"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:padding="12dp"
        android:src="@drawable/baseline_done_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/task"
        android:layout_marginEnd="16dp"
        />

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter The Task Title"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@+id/task"
        android:background="@drawable/blue_border"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:fontFamily="@font/poppins_extrabold"/>


    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Enter The Task Description"
        android:padding="12dp"
        android:gravity="top"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/title"
        android:background="@drawable/blue_border"
        android:fontFamily="@font/poppins_extrabold"/>

    <EditText
        android:id="@+id/date"
        android:layout_below="@+id/description"
        android:drawableLeft="@drawable/baseline_edit_calendar_24"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/blue_border"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:textSize="20sp"
        android:drawablePadding="10dp"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/poppins_extrabold"
        android:hint="Date:"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <EditText
        android:id="@+id/time"
        android:layout_below="@+id/date"
        android:drawableLeft="@drawable/baseline_access_time_24"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/blue_border"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:textSize="20sp"
        android:drawablePadding="10dp"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/poppins_extrabold"
        android:hint="Time:"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>


</RelativeLayout>